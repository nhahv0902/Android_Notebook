<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
    <data>
        <import type="com.nhahv0902.notebook.screen.main.notebook.NotebookContract.NotebookDate"/>
        <import type="org.apache.commons.lang3.StringUtils"/>
        <variable
            name="viewModel"
            type="com.nhahv0902.notebook.screen.main.notebook.NotebookViewModel"
            />
        <variable
            name="notebook"
            type="com.nhahv0902.notebook.data.db.entity.Notebook"
            />
        <variable
            name="position"
            type="int"
            />

    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_date"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_year"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_circle_menu_grey_24dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textColor="#3397de"
            android:layout_marginStart="8dp"
            android:text="@{StringUtils.capitalize(notebook.title) }"
            app:layout_constraintBottom_toBottomOf="@+id/text_year"
            app:layout_constraintEnd_toStartOf="@+id/text_day_of_month"
            app:layout_constraintStart_toEndOf="@+id/image_date"
            app:layout_constraintTop_toTopOf="parent"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:date_notebook="@{notebook.date}"
            bind:date_type="@{NotebookDate.MONTH}"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/text_month"
            app:layout_constraintTop_toBottomOf="@+id/text_month"
            bind:date_notebook="@{notebook.date}"
            bind:date_type="@{NotebookDate.YEAR}"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_day_of_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:text="TextView"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_year"
            app:layout_constraintEnd_toStartOf="@+id/text_month"
            app:layout_constraintTop_toTopOf="@+id/text_month"
            bind:date_notebook="@{notebook.date}"
            bind:date_type="@{NotebookDate.DAY_OF_MONTH}"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/color_brown_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_year"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@{StringUtils.capitalize(notebook.content)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_line"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_content"
            bind:date_notebook="@{notebook.date}"
            bind:date_type="@{NotebookDate.DAY_OF_WEAK}"
            bind:time_notebook="@{notebook.time}"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_line2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/color_brown_100"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_time"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_line2"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_line3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/color_brown_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_line3"
            >
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_like_grey_24dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_like"
                />
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_line3"
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_share_grey_24dp"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/item_share"
                app:layout_constraintStart_toEndOf="@+id/image_share"
                app:layout_constraintTop_toTopOf="@id/image_share"
                />
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_line3"
            app:srcCompat="@drawable/ic_more_grey_24dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_line4"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/color_brown_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_more"
            />


    </android.support.constraint.ConstraintLayout>
</layout>
